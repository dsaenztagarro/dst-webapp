<?xml version="1.0"?>
<!DOCTYPE ejb-jar PUBLIC "-//Sun Microsystems, Inc.//DTD Enterprise JavaBeans 2.0//EN" "http://java.sun.com/j2ee/dtds/ejb-jar_2_0.dtd">
<ejb-jar>
  <enterprise-beans>
    <session>
      <ejb-name>TestBean</ejb-name>
      <home>com.davlanca.webapp.framework.ejb.test.TestBeanLocal</home>
      <remote>com.davlanca.webapp.framework.ejb.test.TestBeanRemote</remote>
      <ejb-class>com.davlanca.webapp.framework.ejb.test.TestBean</ejb-class>
      <session-type>Stateless</session-type>
      <transaction-type>Container</transaction-type>
    </session>
   </enterprise-beans>
   
   <assembly-descriptor>
    <container-transaction>
      <method>
        <ejb-name>TestBean</ejb-name>
        <method-name>processRequest</method-name>
      </method>
      <trans-attribute>Required</trans-attribute>
    </container-transaction>
   </assembly-descriptor>
</ejb-jar>